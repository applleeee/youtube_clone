extends base.pug

block content 
    div
        video#preview
        button#startBtn 녹화 시작
    if errorMessage 
        span=errorMessage 
    form(method="POST", enctype="multipart/form-data")
        div.filebox
            input(id="videoUrl", value="비디오 선택", disabled="disabled").filename
            label(for="video") 업로드
            input(type="file", accept="video/*", id="video", required, name="video")
        div.filebox
            input(id="thumbUrl", value="썸네일 선택", disabled="disabled").filename
            label(for="thumb") 업로드
            input(type="file", accept="image/*", id="thumb", required, name="thumb")
        input(name="title", placeholder="제목", required, type="text", maxlength=20)
        input(name="description", placeholder="설명", required, type="text", maxlength=80)
        input(name="hashtags", placeholder="태그", required, type="text")
        input(type="submit", value ="업로드")

block scripts
    script(src="/assets/js/recorder.js")
    script(src="/assets/js/fileUrl.js")